# add space after elevation to make the shell check the next command with aliases
alias sudo='sudo '
alias doas='doas '
alias ls='exa -l --group-directories-first'
alias v='nvim'
alias py='python'
alias man="man --pager 'nvim +Man!'"
alias hide="unset HISTFILE"
alias hp="journalctl -p 4 -xb"
alias igpu-vk="VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/intel_icd.x86_64.json "
alias gittree="git log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
