function gssh {
    TERM=xterm-256color gcloud compute ssh "$@"
}

function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

alias ls="eza -l --group-directories-first"
alias ssh="TERM=xterm-256color ssh"
alias ssh="TERM=xterm-256color ssh"
